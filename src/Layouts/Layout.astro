---
interface Props {
    pageTitle?:string
    pageDescription?:string
}
const {pageTitle='#',pageDescription='Pagina sin descripcion'}=Astro.props;

import '../styles/layout.css'
import Nav from '../components/landing/Nav.astro';
import Form from '../components/landing/Form.astro';
import {ViewTransitions} from 'astro:transitions';
import MyReactComponent from '../components/landing/MyReactComponent';

---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="descripcion" content={pageDescription}>
    <title>Equinoccio|{pageTitle}</title>
    <link rel="icon" href="/favicon.ico" type="image/png">
    <ViewTransitions />
</head>
<body>
    <Nav></Nav>
    <main class="mx-auto">
        <!-- Colocamos la stiqueta slot, la cual permite agregar el contenido de cualquier otra pagina que importamos -->
        <slot/>
    </main>
    <Form></Form>
    <script type="module" src="/node_modules/preline/dist/preline.js"></script>

    <MyReactComponent  client:visible></MyReactComponent>
</body>

  
</html>