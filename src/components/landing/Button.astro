    name:string
    name_icon?:string
    extraClass?:string
}
const {name='Click Aqui', name_icon='default'}=Astro.props;
const  {extraClass=''} =Astro.props;
console.log("recibo de la Prop"+name);
console.log("recibo de la prop "+name_icon);
